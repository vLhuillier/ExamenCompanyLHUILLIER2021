<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:columnCount="3"
        android:padding="5dp"
        tools:context=".CompanyActivity"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/title_company"
            android:text="@string/content_title_company"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_height="50dp"
            android:paddingStart="15dp"
            android:layout_marginTop="15dp"
            android:textSize="25dp"
            android:orientation="horizontal"/>

        <ImageView
            android:id="@+id/img_company"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginTop="20dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/company"
            android:layout_gravity="top|center"/>

        <TextView
            android:id="@+id/siren_company"
            android:text="@string/siren_company"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_height="50dp"
            android:paddingStart="15dp"
            android:layout_marginTop="40dp"
            android:orientation="horizontal"/>

        <TextView
            android:id="@+id/siret_company"
            android:text="@string/siret_company"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_height="50dp"
            android:paddingStart="15dp"
            android:orientation="horizontal"/>

        <TextView
            android:id="@+id/nic_company"
            android:text="@string/nic_company"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_height="50dp"
            android:paddingStart="15dp"
            android:orientation="horizontal"/>

        <TextView
            android:id="@+id/l1_normalisee_company"
            android:text="@string/l1_normalisee_company"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_height="50dp"
            android:paddingStart="15dp"
            android:orientation="horizontal"/>

        <TextView
            android:id="@+id/l2_normalisee_company"
            android:text="@string/l2_normalisee_company"
            android:layout_row="6"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_height="50dp"
            android:paddingStart="15dp"
            android:orientation="horizontal"/>

        <TextView
            android:id="@+id/l3_normalisee_company"
            android:text="@string/l3_normalisee_company"
            android:layout_row="7"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_height="50dp"
            android:paddingStart="15dp"
            android:orientation="horizontal"/>

        <TextView
            android:id="@+id/l4_normalisee_company"
            android:text="@string/l4_normalisee_company"
            android:layout_row="8"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_height="50dp"
            android:paddingStart="15dp"
            android:orientation="horizontal"/>

        <TextView
            android:id="@+id/l5_normalisee_company"
            android:text="@string/l5_normalisee_company"
            android:layout_row="9"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_height="50dp"
            android:paddingStart="15dp"
            android:orientation="horizontal"/>
        <TextView
            android:id="@+id/l6_normalisee_company"
            android:text="@string/l6_normalisee_company"
            android:layout_row="9"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_height="50dp"
            android:paddingStart="15dp"
            android:orientation="horizontal"/>
        <TextView
            android:id="@+id/l7_normalisee_company"
            android:text="@string/l7_normalisee_company"
            android:layout_row="9"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_height="50dp"
            android:paddingStart="15dp"
            android:orientation="horizontal"/>

        <ProgressBar android:id="@+id/prgCompany"
            android:visibility="invisible"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>